{{#with userDetails}}
<h1>Welcome {{this.username}}</h1>

<img src="{{this.imageURL}}" alt="Profile Picture">
<h3>Name: {{this.username}}</h3>
<h3>Location: {{this.location}}</h3>
<h3>E-Mail: {{this.email}}</h3>
<h3>Phone: {{this.phoneNumber}}</h3>
{{/with}}

<h3>Tools:</h3>
<ul>
{{#each userDetails.toolsAvailable}}
    <h3>{{name}}</h3>
{{/each}}
</ul>

<h3>Reviews To Be Added...</h3>

<form action="/profile/edit" method="GET">
    <button type="submit">Edit</button>
 </form>



